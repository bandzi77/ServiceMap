@{
    Layout = "_MvcLayout";
}

@model ResetPasswordModel

@* TODO style *@
<div class="panel-body" style="margin-top: 10%;">
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Nowe hasło
                </div>
                <div class="panel-body center-block">
                    <form asp-action="ResetPassword" asp-controller="Account" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <input asp-for="Token" type="hidden" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" maxlength="12" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" maxlength="12" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-right">
                                <button class="btn btn-primary" type="submit">Resetuj hasło</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
