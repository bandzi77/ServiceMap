@{
    Layout= "_LoginLayout";
 }

@model LoginModel


<div class="panel panel" style="background-color:white; border-bottom-color:darkorange;">
    <div class="panel-heading" style="margin-left:15px; vertical-align:middle;">
        <div class="row">
            <h3 class="panel-title">
                <a href="http://www.tnt.com/express/pl_pl/site/home.html">
                    <img src="~/app/assets/images/logo.svg" alt="TNT" style="width: 98px; height: 35px;" />
                </a> Logowanie do Mapy Serwisowej
            </h3>
        </div>
    </div>
</div>
@* TODO style *@
<div class="panel-body" style="margin-top: 10%;">
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Logowanie
                </div>
                <div class="panel-body center-block" >
                    <form asp-action="Login" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-left" style="vertical-align:bottom">
                                <a href="">Nie pamiętam hasła</a>
                            </div>
                            <div class="col-md-6 text-right">
                                <button class="btn btn-primary" type="submit">Zaloguj</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
